{
  "version": 2,
  "env": {
    "AV_API_KEY": "@av-api-key",
    "ETAG_KEY": "@etag-key",
    "AWS_ACCESS_KEY_ID": "@stonks-aws-access-key-id",
    "AWS_SECRET_ACCESS_KEY": "@stonks-aws-secret-access-key"
  },
  "builds": [
    {"src":"*.jpg", "use": "@now/static"},
    {"src":"package.json", "use": "@now/static-build"},
    {"src":"api/index.ts", "use": "@now/node"}
  ],
  "regions": ["iad1"],
  "routes": [
    {"src":"/.api/([a-zA-Z]{1,4})",
     "dest":"/api/index.ts?symbol=$1"},
    {"src":"/.api(.*)", "dest": "/api$1"},
    {"src":"/(.*).jpg",
      "dest": "/$1.jpg",
      "headers": {
        "Cache-Control": "max-age=86400, immutable"
      }
    },
    {"src":"/index.js","dest":"/index.js"},
    {"src":"/(.*)", "dest": "/"}
  ]
}
